<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_popup_orther"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_timxe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tim_xe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tìm xe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_bando"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/doi_bd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Bản đồ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_taikhoan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tk_sim" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tài khoản" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_diadiem"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dia_diem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Địa điểm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_tramatm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tram_atm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Trạm ATM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                    android:id="@+id/btn_tramxang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cay_xang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Trạm xăng" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_popup_ban_do"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Chọn loại bản đồ: " />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#dddde0" />


            <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                android:id="@+id/btn_standard"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình vẽ"
                    android:textColor="#1c60ff" />

            </vn.com.flex.dragonfly.lib.AnimationLinearLayout>

            <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                android:id="@+id/btn_statelite"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vệ tinh"
                    android:textColor="#1c60ff" />

            </vn.com.flex.dragonfly.lib.AnimationLinearLayout>

            <vn.com.flex.dragonfly.lib.AnimationLinearLayout
                android:id="@+id/btn_hybrid"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cả hai"
                    android:textColor="#1c60ff" />

            </vn.com.flex.dragonfly.lib.AnimationLinearLayout>

        </LinearLayout>

        <vn.com.flex.dragonfly.lib.AnimationLinearLayout
            android:id="@+id/btn_thoat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_border"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:textColor="#1c60ff" />

        </vn.com.flex.dragonfly.lib.AnimationLinearLayout>

    </LinearLayout>


</LinearLayout>